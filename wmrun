#!/usr/bin/env bash

wm="${wm:-dminiwm}"

# fix misbehaving Java applications
wmname LG3D &

while true
do "$HOME/.bin/${wm}.status"
done | /usr/bin/dzen2 -h 18 -w 1920 -ta r -e -p \
    -fn "-misc-terminusmod.icons-medium-r-normal--12-120-72-72-c-60-*-*" &

while true
do "/usr/local/bin/${wm}" 2>"/tmp/${wm}.log" || break
done

