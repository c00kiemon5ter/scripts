#!/usr/bin/env bash

: "${wm:=monsterwm}"
: "${ff:="/tmp/${wm}.fifo"}"

[[ -p $ff ]] || mkfifo -m 600 "$ff"
ds=("web" "dev" "foo")
ms=("T" "M" "B" "G" "F")

some_sorta_bar &

while read -t 60 -r wmout || true; do
    if [[ $wmout =~ ^(([[:digit:]]+:)+[[:digit:]]+ ?)+$ ]]; then
        read -ra desktops <<< "$wmout" && unset r
        for desktop in "${desktops[@]}"; do
            IFS=':' read -r d w m c u <<< "$desktop"
            ((c)) && fg="&4" i="${ms[$m]}" || fg="&3"
            ((u)) && w+='&5!'
            r+="$fg${ds[$d]} ${w/#0/&8ยก} "
        done
    fi
    xsetroot -name "&L$r &5[&3$i&5] &R$(statusbar)"
done < "$ff" &

$wm | tee -a "$ff"
